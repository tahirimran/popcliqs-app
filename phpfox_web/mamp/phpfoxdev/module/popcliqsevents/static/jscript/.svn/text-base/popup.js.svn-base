function delete_event(user_id, event_id){
	
	var queryStr = 'user_id='      + user_id     + '&event_id='      + event_id ;
	$.ajaxCall('popcliqsevents.deleteIntEvent' , queryStr  );
	setTimeout(fetchIntEvt() ,1000*10);
	
}